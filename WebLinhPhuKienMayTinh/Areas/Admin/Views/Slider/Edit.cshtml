
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@model WebLinhPhuKienMayTinh.Models.EF.SLIDER
<div class="grid_10">
    <div class="box round first grid">
        <h2>Sửa thương hiệu</h2>
        @section jsFooter{
            <script>
                $('#selectImg').bind('click', function (e) {
                    e.preventDefault();
                    var finder = new CKFinder();
                    finder.selectActionFunction = function (url) {
                        $('#txtImage').val(url);
                    };
                    finder.popup();
                })
               
            </script>
        }
        @Html.ValidationSummary(false, "", new { @class = "error" })
        <div class="success">@ViewData["success"]</div>
        <div class="block copyblock" style="margin-right: 100px ;
    padding-right: 30px ;
    width:auto ;">
            @using (Html.BeginForm("Edit", "Slider", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @Html.HiddenFor(model=>model.sliderID)


                <div class="form-group">
                    <label class="control-label col-md-2">Tên Slider</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model=>model.sliderName, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Tải ảnh</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.slider_Image, new { htmlAttributes = new { @class = "form-control", @id = "txtImage" } })
                        <a id="selectImg" href="#">Chọn ảnh</a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Trạng thái</label>
                    <div class="col-md-10">
                        <select id="select" name="type0">
                            @{
                                if (ViewBag.type == 0)
                                {
                                    <option selected value="0">Tắt</option>
                                    <option value="1">Bật</option>
                                }
                                else
                                {
                                    <option selected value="1">Bật</option>
                                    <option value="0">Tắt</option>
                                }
                            }

                        </select>
                    </div>
                </div>



                <div class="form-group">
                    <div class="news_submit">
                        <input type="submit" name="submit" Value="Lưu" />
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("<<<Quay lại", "Productlist")
            </div>
        </div>
    </div>
</div>




@{
    ViewBag.Title = "EnterProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@model WebLinhPhuKienMayTinh.Models.EF.PRODUCT
<div class="grid_10">
    <div class="box round first grid">
        <h2>Nhập hàng</h2>
        <div class="success">@ViewData["success"]</div>
        <div class="error">@ViewData["error"]</div>
        <div class="block">

            @using (Html.BeginForm("EnterProduct", "Product", FormMethod.Post))//(action,controller)
            {
                <table class="form">

                    <tr>
                        <td>
                            <label>Tên sản phẩm</label>
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.productName, new { @class = "medium", placeholder = "Nhập tên sản phẩm...",@readonly="readonly" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Mã sản phẩm</label>
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.product_Code, new { @class = "medium", placeholder = "Nhập code sản phẩm...",@readonly="readonly" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Số lượng tồn</label>
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.product_Remain, new { @class = "medium", placeholder = "Nhập số lượng sản phẩm...",@readonly="readonly" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Số lượng nhập thêm</label>
                        </td>
                        <td>
                            <input name="product_more_quantity" type="text" placeholder="Nhập thêm số lượng" class="medium" />

                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" name="submit" Value="Lưu" />
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>
<!-- Load TinyMCE -->
<script src="js/tiny-mce/jquery.tinymce.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        setupTinyMCE();
        setDatePicker('date-picker');
        $('input[type="checkbox"]').fancybutton();
        $('input[type="radio"]').fancybutton();
    });
</script>
@model WebLinhPhuKienMayTinh.Models.EF.BRAND

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}


<div class="grid_10">
    <div class="box round first grid">
        <h2>Sửa thương hiệu</h2>
        @Html.ValidationSummary(false, "", new { @class = "error" })
        <div class="success">@ViewData["success"]</div>
        <div class="block copyblock">

            @using (Html.BeginForm("Edit", "Brand", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                   
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.brandId)

                    <div class="form-group">
                        <label class="new_label">Thương hiệu sản phẩm</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.brandName, new { htmlAttributes = new { @class = "form-control" } })
                            
                        </div>
                    </div>
                    <div class="form-group">

                        <label class="new_label">Loại thương hiệu</label>

                        <div class="col-md-10">
                            <select id="select" name="topBrand">
                                @{ 
                                    if (ViewBag.topBrand=="0")
                                    {
                                <option selected value="0">Thương hiệu bình thường</option>
                                <option value="1">Thương hiệu hàng đầu</option>
                                    }
                                    else
                                    {
                                <option selected value="1">Thương hiệu hàng đầu</option>
                                <option value="0">Thương hiệu bình thường</option>
                                        }
                                    }

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="new_submit">
                            <input type="submit" name="submit" Value="Lưu" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("<<<Quay lại", "Brandlist", "Brand")
            </div>

        </div>
    </div>
</div>
